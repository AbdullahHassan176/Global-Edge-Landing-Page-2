# Global Edge Landing Page - Environment Variables Example
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NEXT_PUBLIC_APP_URL=https://theglobaledge.io
NEXT_PUBLIC_APP_DOMAIN=theglobaledge.io
NEXT_PUBLIC_SITE_URL=https://theglobaledge.io

# =============================================================================
# OAUTH PROVIDERS
# =============================================================================
# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
NEXT_PUBLIC_GITHUB_CLIENT_ID=your-github-client-id

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
NEXT_PUBLIC_LINKEDIN_CLIENT_ID=your-linkedin-client-id

# =============================================================================
# AZURE SERVICES
# =============================================================================
# Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=your-azure-connection-string
AZURE_STORAGE_ACCOUNT_NAME=your-azure-account-name
AZURE_STORAGE_ACCOUNT_KEY=your-azure-account-key
AZURE_STORAGE_CONTAINER_NAME=your-container-name

# Azure Cosmos DB
COSMOS_DB_ENDPOINT=your-cosmos-endpoint
COSMOS_DB_KEY=your-cosmos-key
COSMOS_DB_DATABASE_NAME=your-database-name

# =============================================================================
# EMAIL SERVICES
# =============================================================================
# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@theglobaledge.io

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================
# Stripe
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# =============================================================================
# SMS SERVICES
# =============================================================================
# Twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# Google Analytics
GOOGLE_ANALYTICS_TRACKING_ID=G-XXXXXXXXXX
GOOGLE_ANALYTICS_MEASUREMENT_ID=G-XXXXXXXXXX
GOOGLE_ANALYTICS_PROPERTY_ID=your-property-id
GOOGLE_ANALYTICS_API_KEY=your-api-key

# =============================================================================
# SECURITY
# =============================================================================
# JWT Secret (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-here

# Session Secret (generate a strong random string)
SESSION_SECRET=your-super-secret-session-key-here

# =============================================================================
# DEVELOPMENT
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development
