{
  "name": "global-edge-landing",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:api": "next build && next build --dir dist/api",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "security": "npm audit && npm run lint && npm run type-check",
    "pre-commit": "npm run format && npm run lint:fix && npm run type-check",
    "prepare": "husky install",
    "azure:setup": "powershell -ExecutionPolicy Bypass -File scripts/setup_azure.ps1",
    "azure:deploy:dev": "azd up --environment dev",
    "azure:deploy:staging": "azd up --environment staging",
    "azure:deploy:prod": "azd up --environment prod",
    "azure:deploy:app:dev": "azd deploy --environment dev",
    "azure:deploy:app:staging": "azd deploy --environment staging",
    "azure:deploy:app:prod": "azd deploy --environment prod",
    "azure:provision:dev": "azd provision --environment dev",
    "azure:provision:staging": "azd provision --environment staging",
    "azure:provision:prod": "azd provision --environment prod",
    "azure:env:list": "azd env list",
    "azure:env:values:dev": "azd env get-values --environment dev",
    "azure:env:values:staging": "azd env get-values --environment staging",
    "azure:env:values:prod": "azd env get-values --environment prod",
    "db:migrate:dev": "scripts/migrate.sh dev",
    "db:migrate:staging": "scripts/migrate.sh staging",
    "db:migrate:prod": "scripts/migrate.sh prod",
    "db:seed:dev": "scripts/seed.sh dev",
    "db:seed:staging": "scripts/seed.sh staging",
    "db:seed:prod": "scripts/seed.sh prod",
    "health:check:dev": "scripts/post_deploy_check.sh dev",
    "health:check:staging": "scripts/post_deploy_check.sh staging",
    "health:check:prod": "scripts/post_deploy_check.sh prod"
  },
  "dependencies": {
    "@azure/cosmos": "^4.5.1",
    "@azure/storage-blob": "^12.17.0",
    "@heroicons/react": "^2.2.0",
    "@react-pdf/renderer": "^4.3.1",
    "@sendgrid/mail": "^8.1.0",
    "@stripe/react-stripe-js": "^2.4.0",
    "@stripe/stripe-js": "^2.4.0",
    "clsx": "^2.1.1",
    "dotenv": "^16.3.1",
    "highcharts": "^11.2.0",
    "highcharts-react-official": "^3.2.1",
    "next": "14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "stripe": "^14.12.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.0.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-regexp": "^2.10.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.1.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3"
  }
}
